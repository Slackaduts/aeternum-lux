file_type: resources

resources:
  inventory_item:
    type: fragment
    content:
      type: panel
      layout: horizontal
      alignment: { v: center }
      elements:
        - image:
          sprite: @icon.sprite
          frame: @icon.frame
          padding: 5
        - text:
          content: @name
          padding: 5
        - text:
          content: x + @amount
          padding: 5